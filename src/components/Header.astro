---
import { CopyEmail } from './CopyEmail';

const navItems = [
  { name: "Sobre MÃ­", url: "#about" },
  { name: "Experiencia", url: "#experience" },
  { name: "Proyectos", url: "#projects" },
];
---

<header class="fixed top-0 z-50 w-full px-6 py-4 transition-all duration-300" id="navbar">
  <nav class="mx-auto flex max-w-7xl items-center justify-between rounded-full border border-white/10 bg-white/5 px-6 py-3 backdrop-blur-md">
    <a href="/" class="text-xl font-bold tracking-tighter text-white">
      JS
    </a>
    
    <div class="hidden items-center gap-6 md:flex">
      {navItems.map((item) => (
        <a 
          href={item.url} 
          class="text-sm font-medium text-gray-300 transition-colors hover:text-white"
        >
          {item.name}
        </a>
      ))}
      <CopyEmail client:load />
    </div>

    <!-- Mobile Menu Button (Simplified for now) -->
    <button class="md:hidden text-white" aria-label="Menu">
      <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><line x1="4" x2="20" y1="12" y2="12"/><line x1="4" x2="20" y1="6" y2="6"/><line x1="4" x2="20" y1="18" y2="18"/></svg>
    </button>
  </nav>
</header>

<script>
  const navbar = document.getElementById('navbar');
  
  window.addEventListener('scroll', () => {
    if (window.scrollY > 50) {
      navbar?.classList.add('py-2');
    } else {
      navbar?.classList.remove('py-2');
    }
  });
</script>
