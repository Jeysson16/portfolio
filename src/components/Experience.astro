---
const experiences = [
  {
    company: "E. Partners Auditores",
    role: "Frontend Developer",
    period: "2024 - Presente",
    description: "Desarrollo de interfaces de usuario para sistemas de auditoría. Optimización de rendimiento y migración de módulos legacy.",
    tech: ["Angular", "RxJS", "TypeScript", "Sass"]
  },
  {
    company: "Freelance",
    role: "Web Developer",
    period: "2023 - Actualidad",
    description: "Creación de sitios web corporativos y landing pages para clientes internacionales.",
    tech: ["React", "Node.js", "Tailwind CSS"]
  }
];
---

<section id="experience" class="py-20">
  <h2 class="mb-12 text-3xl font-bold text-white md:text-4xl text-center md:text-left">Experiencia Laboral</h2>
  
  <div class="relative border-l border-white/20 ml-3 md:ml-6 space-y-12">
    {experiences.map((exp) => (
      <div class="relative pl-8 md:pl-12">
        <!-- Dot on the line -->
        <span class="absolute -left-[5px] top-2 h-3 w-3 rounded-full bg-accent ring-4 ring-background"></span>
        
        <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between mb-2">
          <h3 class="text-xl font-bold text-white">{exp.role}</h3>
          <span class="text-sm text-gray-400 font-mono bg-white/5 px-2 py-1 rounded">{exp.period}</span>
        </div>
        
        <h4 class="text-lg font-medium text-accent mb-4">{exp.company}</h4>
        
        <p class="text-gray-400 mb-6 max-w-2xl">
          {exp.description}
        </p>
        
        <div class="flex flex-wrap gap-2">
          {exp.tech.map((t) => (
            <span class="inline-flex items-center rounded-md bg-white/5 px-2 py-1 text-xs font-medium text-gray-300 ring-1 ring-inset ring-white/10">
              {t}
            </span>
          ))}
        </div>
      </div>
    ))}
  </div>
</section>
